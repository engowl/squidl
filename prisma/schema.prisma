generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Chain {
  id               Int     @id @default(autoincrement())
  name             String
  chainlistUrl     String
  rpcUrl           String
  nativeToken      String
  blockExplorerUrl String
  isTestnet        Boolean

  transactions Transaction[]
  tokens       Token[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id String @id @default(cuid())

  address  String @unique
  username String

  aliases UserAlias[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UserAlias {
  id String @id @default(cuid())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  alias            String?
  stealthAddresses StealthAddress[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, alias])
}

model StealthAddress {
  id String @id @default(cuid())

  aliasId String
  alias   UserAlias @relation(fields: [aliasId], references: [id], onDelete: Cascade)

  address       String  @unique
  isSmartWallet Boolean @default(false)

  transactions Transaction[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Token {
  id String @id @default(cuid())

  chainId Int
  chain   Chain @relation(fields: [chainId], references: [id], onDelete: Cascade)

  address  String
  name     String
  symbol   String
  decimals Int

  transactions Transaction[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([chainId, address])
}

model CommonTokenPrice {
  id      String @id
  chainId Int

  name   String
  symbol String

  tokenAddress String?
  priceUsd     Float

  isNativeToken Boolean

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model OneInchTokenList {
  id String @id @default(cuid())

  address  String
  chainId  Int

  name     String
  symbol   String
  decimals Int
  logoURI  String?

  @@unique([chainId, address])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Transaction {
  id String @id @default(cuid())

  chainId Int
  chain   Chain @relation(fields: [chainId], references: [id], onDelete: Cascade)

  fromAddress String
  toAddress   String

  tokenId String
  token   Token  @relation(fields: [tokenId], references: [id], onDelete: Cascade)

  amount String
  data   Json
  txHash String @unique

  stealthAddressId String
  stealthAddress   StealthAddress @relation(fields: [stealthAddressId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
